package search;

public class binarysearch {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 int arr[] = { 2, 3, 4, 10, 40 }; 
		 int len=arr.length;
		 int x=100;
		 int r=0;
		 
		 while(r<=len)
		 {
			 int mid=r+(len-r)/2;
			 if(arr[mid]==x)
			 {
				 System.out.println(mid);
			 break;
			 }
			 else if(arr[mid]>x)
			 {
				 len=mid-1;
			 }
			 else if(arr[mid]<x)
			 { 
				 r=mid+1;
		 }
			 else
			 {
				 System.out.println("Item Not present");
				 break;
			 }
		 
		 
	}
	
	}
}
