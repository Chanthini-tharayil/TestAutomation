package prep;

import java.util.Arrays;

public class sumpair {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
 int[] a={11, 15, 6, 8, 9, 10};
 Arrays.sort(a);
 int sum =14;
 int i=0,j=a.length-1;
 while(i<j)
 {
	 if(a[i]+a[j]==sum)
	 {
		 System.out.println("pair is+"+a[i]+" "+a[j]);
		 i++;j++;
		 }
	 else if(a[i]+a[j]<sum)
	 {
		 i++;
	 }
	 else if(a[i]+a[j]>sum)
	 {
		 j++;
	 }
 }

	}

}
