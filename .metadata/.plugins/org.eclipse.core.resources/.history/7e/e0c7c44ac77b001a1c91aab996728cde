package prep1;

import java.util.Arrays;

public class findpair {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int a[] = {1, 4, 3, 4, 9, 11, 8};
		int d = 1, n =7;
	  Arrays.sort(a);
	  int i=0,j=n-1,sum=0;
	  while(i<a.length &&j>0)
	  {
		  if(a[i]-a[j]==d)
		  {
			  System.out.println(a[i]+" "+a[j]);
			  i++;j--;
		  }
		  else if(a[i]-a[j]<d)
		  {
			  i++;
		  }
		  else if(a[i]-a[j]>d)
		  {
			  j--;
		  }
	  }
	}

}
